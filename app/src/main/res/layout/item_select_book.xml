<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mindorks.framework.mvvm.com.kanci.ui.login.LoginActivity">

    <data>

        <variable
            name="vm"
            type="com.kanci.ui.selectbook.SelectBookAdapter.ItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/book"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{vm.book.name}"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:text="大学四级" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{String.valueOf(vm.book.wordCount)}"
            android:textColor="#8D97A1"
            android:textSize="14sp"
            tools:text="2345词" />
    </LinearLayout>

</layout>